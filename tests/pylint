import os
import sys

BINDIR = os.path.dirname(__file__)
LIBDIR = os.path.realpath(os.path.join(BINDIR, '..', 'lib'))

if LIBDIR not in sys.path:
    sys.path.append(LIBDIR)

import aquilon.aqdb.depends
import aquilon.worker.depends
import aquilon.client.depends
import depends
# Any other packages?

# Any of the above may override the default location for ms.version...
try:
    import ms.version
except ImportError:
    pass
else:
    ms.version.addpkg("pylint", "1.5.2")
    ms.version.addpkg('six', '1.7.3')
    ms.version.addpkg("astroid", "1.4.3")
    ms.version.addpkg('lazy_object_proxy', '1.2.1')
    ms.version.addpkg('wrapt', '1.10.5')

    # These are not used directly, but may be used by code pylint is called for
    ms.version.addpkg('ipython', '3.1.0')

from pylint import lint

pylintrc = os.path.join(BINDIR, "pylintrc")
lint.Run(["--rcfile", pylintrc] + sys.argv[1:])
